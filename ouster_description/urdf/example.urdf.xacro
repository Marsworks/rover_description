<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="os1_example">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <!-- Base Footprint -->
  <link name="base_footprint" />

  <!-- Base Link -->
  <joint name="footprint" type="fixed" >
   <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0.05" rpy="0 0 0" />
  </joint>
  <link name="base_link" >
    <visual>
      <geometry>
        <box size="2.5 1.1 1.0" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="2.5 1.1 1.0" />
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="10"/>
      <inertia ixx="3.0" ixy="0.0" ixz="0.0"
               iyy="3.0" iyz="0.0" 
               izz="3.0" />
    </inertial>
  </link>

  <!-- Bug fix: changed type from continuous to fixed to get rid of a bug
  https://www.reddit.com/r/ROS/comments/e3u3ru/rviz_error_no_transform_from_wheel_left_link/-->

  <joint name="front_left_wheel_hinge" type="continuous">
    <parent link="base_footprint"/>
    <child link="front_left_wheel"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0"/>
  </joint>
  <link name="front_left_wheel">
      <pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <origin rpy="0 1.6 1.6" xyz="1.0 0.6 -0.35"/>
      </collision>
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <material name="blue"/>
        <origin rpy="0 1.6 1.6" xyz="1.0 0.6 -0.35"/>
      </visual>
    </link>


  <joint name="front_right_wheel_hinge" type="fixed">
    <pose>0 0 -0.03 0 0 0</pose>
    <parent link="base_footprint"/>
    <child link="front_right_wheel"/>
  </joint>
  <link name="front_right_wheel">
      <pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <origin rpy="0 1.6 1.6" xyz="1.0 -0.6 -0.35"/>
      </collision>
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <material name="blue"/>
        <origin rpy="0 1.6 1.6" xyz="1.0 -0.6 -0.35"/>
      </visual>
    </link>

  <joint name="back_right_wheel_hinge" type="fixed">
    <pose>0 0 -0.03 0 0 0</pose>
    <parent link="base_footprint"/>
    <child link="back_right_wheel"/>
  </joint>
  <link name="back_right_wheel">
      <pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <origin rpy="0 1.6 1.6" xyz="-1.0 -0.6 -0.35"/>
      </collision>
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <material name="blue"/>
        <origin rpy="0 1.6 1.6" xyz="-1.0 -0.6 -0.35"/>
      </visual>
    </link>

      <joint name="back_left_wheel_hinge" type="fixed">
    <pose>0 0 -0.03 0 0 0</pose>
    <parent link="base_footprint"/>
    <child link="back_left_wheel"/>
  </joint>
  <link name="back_left_wheel">
      <pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <origin rpy="0 1.6 1.6" xyz="-1.0 0.6 -0.35"/>
      </collision>
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.3"/>
        </geometry>
        <material name="blue"/>
        <origin rpy="0 1.6 1.6" xyz="-1.0 0.6 -0.35"/>
      </visual>
    </link>



  <xacro:include filename="$(find ouster_description)/urdf/OS1-64.urdf.xacro"/>
  <OS1-64 parent="base_link" name="os1_sensor" hz="10" samples="220">
    <origin xyz="0 0 1.2" rpy="0 0 0" />
  </OS1-64>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

  <transmission name="move_front_left_wheel">
  <type>transmission_interface/SimpleTransmission</type>
  <actuator name="$front_left">
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
  <joint name="front_left_wheel_hinge">
    <hardwareInterface>PositionJointInterface</hardwareInterface>
  </joint>
</transmission>

</robot>

